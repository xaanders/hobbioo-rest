{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "index.ts",
    "jest.config.js"
  ],
  "exclude": ["node_modules"]
} 