{
  "name": "hobbioo-rest-api",
  "version": "1.0.0",
  "description": "Rest API application serving Hobbioo Platform",
  "main": "src/app/server.ts",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "set NODE_OPTIONS=--loader ts-node/esm&& ts-node src/app/server.ts",
    "dev": "nodemon",
    "build": "tsc",
    "serve": "node dist/app/server.js",
    "prisma:generate": "prisma generate --schema src/app/db/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema src/app/db/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema src/app/db/prisma/schema.prisma",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "author": "Oleksandr Riazantsev",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.723.0",
    "@prisma/client": "^5.22.0",
    "body-parser": "^1.20.3",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "sanitize-html": "^2.14.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/sanitize-html": "^2.13.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
